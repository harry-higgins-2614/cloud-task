{
  "name": "cloud-take-home-assignment",
  "version": "0.1.0",
  "scripts": {
    "build": "webpack",
    "watch": "webpack watch",
    "start:server": "node external-service",
    "invoke": "node app",
    "test": "jest"
  },
  "jest": {
    "coverageReporters": [
      "text"
    ],
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": -10
      }
    },
    "collectCoverageFrom": [
      "src/**/*.(js|ts)"
    ],
    "setupFiles": [
      "<rootDir>config.ts"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": ".test\\.(js|ts)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.4",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "ttypescript": "^1.5.15",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@types/aws-lambda": "^8.10.124",
    "jsonschema": "^1.4.1",
    "source-map-support": "^0.5.21"
  }
}
